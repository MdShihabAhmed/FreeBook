<div>
  <% if @user.profile_photo.attached? %>
    <%= image_tag @user.profile_photo.variant(resize_to_limit: [200, 200]) %>
  <% else %>
    <%= image_tag "default_profile.png", size: "200x200" %>
  <% end %>
</div>
<h4> Username: <%= @user.username %> | Name: <%= @user.full_name %> | Email: <%= @user.email %> </h4>
<h5>
  Bio: <%=@user.bio %>
</h5>
<%if @user == current_user %>
    <h4><%=link_to "Edit Profile",  edit_user_registration_path%></h4>
<%end %>

<h2>Posts</h2>

<% @user.posts.each do |post| %>
    <li><strong><%=post.title%></strong>
      at: <%= post.created_at.in_time_zone("Asia/Dhaka").strftime("%l:%M %p, %a %b %e")%>
      <p> <%= post.body %> </p>
      <strong><%= pluralize(post.likes.count, "Like") %></strong>
      <%= link_to "See Comments", post_path(post) %>
    </li><br>
<% end %>

<% if user_signed_in? && @user.id==current_user.id%>
  <%= link_to "Create New Post", new_post_path%>
<%end%>
