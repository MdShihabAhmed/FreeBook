<h4> Username: <%= @user.username %> | Name: <%= @user.full_name %> | Email: <%= @user.email %> </h4>

<h2>Posts</h2>

<% @user.posts.each do |post| %>
    <li><h3><%=post.title%></h3>
      <p> <%= post.body %> </p>
      <%= link_to "Comments", post_path(post) %>
    </li><br>
<% end %>

<% if user_signed_in? && @user.id==current_user.id%>
  <%= link_to "Create New Post", new_post_path%>
<%end%>
