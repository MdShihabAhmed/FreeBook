<% if @sent_requests.any? %>
  <strong>Pending Sent Requests</strong>
  <ul>
    <% @sent_requests.each do |follower| %>
      <li><%= link_to follower.username, user_path(follower) %></li>
    <% end %>
  </ul>
<% end %>

<h1><%= @user.username %> is Following</h1>

<% if @following.any? %>
  <ul>
    <% @following.each do |followed_user| %>
      <li><%= link_to followed_user.username, user_path(followed_user) %></li>
    <% end %>
  </ul>
<% else %>
  <p><%= @user.username %> is not following anyone yet.</p>
<% end %>